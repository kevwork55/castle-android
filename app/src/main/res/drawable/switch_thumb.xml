<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:width="40dp" android:height="40dp">
                <bitmap android:src="@drawable/shadow_switch_thumb_checked" />
            </item>
            <item android:width="@dimen/switch_thumb_size" android:height="@dimen/switch_thumb_size" android:bottom="3dp" android:end="3dp" android:start="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <gradient android:angle="270" android:endColor="@color/main_end_gradient" android:startColor="@color/main_start_gradient" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:width="40dp" android:height="40dp">
                <bitmap android:src="@drawable/shadow_switch_thumb_unchecked" />
            </item>
            <item android:width="@dimen/switch_thumb_size" android:height="@dimen/switch_thumb_size" android:bottom="3dp" android:end="3dp" android:start="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <gradient android:angle="270" android:endColor="@color/main_end_gradient" android:startColor="@color/main_start_gradient" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>