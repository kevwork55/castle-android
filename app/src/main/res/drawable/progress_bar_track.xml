<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item
        android:id="@android:id/background"
        android:height="@dimen/progress_bar_height">
        <shape>
            <solid android:color="@color/background_dark" />
            <corners android:radius="@dimen/progress_bar_corner_radius" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item
        android:id="@android:id/progress"
        android:height="@dimen/progress_bar_height">
        <clip>
            <shape>
                <gradient
                    android:angle="180"
                    android:centerY="1.0"
                    android:endColor="@color/main_end_gradient"
                    android:startColor="@color/main_start_gradient" />
                <corners android:radius="@dimen/progress_bar_corner_radius" />
            </shape>
        </clip>
    </item>
</layer-list>