<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/switch_track_corner_radius" />
            <gradient android:angle="90" android:endColor="@color/main_end_gradient" android:startColor="@color/main_start_gradient" android:type="linear" />
            <size android:height="@dimen/switch_track_height" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/switch_track_corner_radius" />
            <solid android:color="@color/background_dark" />
            <size android:height="@dimen/switch_track_height" />
        </shape>
    </item>
</selector>