<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kitelytech.castlelink">

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CastleLink">
        <activity
            android:name="com.kitelytech.castlelink.custom.activities.ProductSettingActivity"
            android:exported="false" />
        <activity
            android:name="com.kitelytech.castlelink.custom.activities.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:exported="true">
        </activity>
        <activity
            android:name=".feature.start.StartActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.home.HomeActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:exported="true">
        </activity>
    </application>

</manifest>